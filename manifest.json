{
  "manifest_version": 2,

  "name": "Youtube scaling",
  "description": "[Description]",
  "version": "1.0",

  "icons": {
    "48": "icon.png"
  },

  "permissions": [
    "tabs", "<all_urls>"
  ],
  
  "content_scripts": [
	{
		"matches": ["http://www.youtube.com/*","https://www.youtube.com/*"],
		"js": ["background.js"]
	}
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}